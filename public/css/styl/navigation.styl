// Navigation

nav ul
  margin: 0

  li
    list-style-type: none

  li, a
    display: inline-block

.top-nav
  width: 100%
  height: 40px
  line-height: 40px

  > li:not(:first-child)
    border-left: 1px solid $gray-lighter

  a
    padding: 0 15px
    font-weight: $font-weight-bold

    &:hover, &.active
      background: lighten($blue-lighter, 60%)

.has-dropdown
  position: relative
  
  a
    padding-right: 35px

  &:hover .dropdown
    display: block

  .ss-icon
    position: absolute
    right: 15px
    top: 2px
    font-size: $font-size-smaller
    color: $blue-light

  .dropdown
    display: none
    background: white
    position: absolute
    top: 100%
    left: 0
    box-shadow: 0 3px 10px lighten($gray-lighter, 50%)

    li
      display: block
      
      &:not(:last-child)
        border-bottom: 1px solid $gray-lighter

