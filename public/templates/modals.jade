        = '  <div class="modal-head">'
        br
        = '    <h3>Modal Title</h3>'
        br
        = '    <a href="" class="modal-close"></a>'
        br
        = '  </div>'
        br
        = '  <div class="modal-body">'
        br
        = '    <p>Modal Content</p>'
        br
        = '    <div class="modal-button-wrapper">'
        br
        = '      <button>Button</button>'
        br
        = '    </div>'
        br
        = '  </div>'
