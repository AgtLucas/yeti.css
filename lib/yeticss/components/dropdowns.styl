/*--------------------------------------------------------------------
*
* $DROPDOWNS
*
--------------------------------------------------------------------*/

.dropdown-standalone li
  font-family: $font-facit

.dropdown-standalone
  position: relative
  display: inline-block
  cursor: pointer

  &:hover
    
    .dropdown
      display: block
      position: absolute
      top: 105%
      left: 0
      min-width: 100%
      border-radius: 3px

      li:not(:last-child)
        border-bottom: inherit

      a
        padding: $ui-padding-default
        display: block

  .dropdown
    display: none

  .icon-arrow-down
    position: relative
    top: -2px
    margin-left: 5px

.dropdown-outlined
  padding: $ui-padding-default
  border: $ui-border
  border-radius: 3px
  color: $blue

  .dropdown
    background-color: white
    border: $ui-border

.dropdown-standalone.button

  a
    color: white

  .dropdown a
    font-weight: normal

  .icon-arrow-down
    border-top-color: white
    
  .dropdown
    background-color: darken($blue, 10%)
    
    li:not(:last-child)
      border-bottom: 1px solid darken($blue, 20%)
      
    a:hover
      color: $blue-lighter

.dropdown-standalone.button-neutral
  
  a
    color: $gray-dark
    
  .icon-arrow-down
    border-top-color: $gray-dark
  
  .dropdown
    background-color: darken($gray-lighter, 20%)
  
    li:not(:last-child)
      border-bottom: 1px solid darken($gray-light, 20%)
      
    a:hover
      color: $gray-darker