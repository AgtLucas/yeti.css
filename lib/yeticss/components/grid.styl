/*--------------------------------------------------------------------
*
* $GRID
*
--------------------------------------------------------------------*/

.container
  margin: 0 auto

@media screen and (max-width: $breakpoint-smartphone)

  .container
    width: $grid-width-mobile

  [class^='column']
    width: 100%

@media screen and (min-width: $breakpoint-smartphone+1)

  [class^='column']
    float: left

  .column-two
    width: 50%

  [class^='column']:not(:first-of-type)
    padding-left: $ui-padding-extra-spaced

  [class^='column']:not(:last-of-type)
    padding-right: $ui-padding-extra-spaced

@media screen and (min-width: $breakpoint-smartphone+1) and (max-width: $breakpoint-desktop)

  .container
    width: $grid-width-tablet

  .column-three
    width: ceil($grid-width-tablet/3)

  .column-four
    width: ceil($grid-width-tablet/4)


@media screen and (min-width: $breakpoint-desktop+1)

  .container
    width: $grid-width-desktop

  .column-three
    width: ceil($grid-width-desktop/3)

  .column-four
    width: ceil($grid-width-desktop/4)
