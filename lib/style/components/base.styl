/*--------------------------------------------------------------------
*
* BASE
*
--------------------------------------------------------------------*/

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%

body
  font: $font-base/$line-height-base $font-sans-serif
  color: $gray-dark
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

//- Selection highlight

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

//- Clearfix

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

//- Headings

h1, h2
  line-height: 1.1

h3, h4
  line-height: 1.3

h1, h2, h3, h5, h6
  color: black

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h4 
  font-size: $font-size-h4

h5
  font-size: $font-size-h5
  text-transform: uppercase
  color: $gray

h6
  font-size: $font-size-h6

//- Links

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:focus
    outline: none

  &:hover 
    color: darken($blue, 20%)

//- Text manipulations

abbr
  color: $gray-dark
  border-bottom: 1px dotted $gray-light

small
  font-size: $font-small

blockquote
  margin: 20px 0
  padding: 15px 20px
  border-left: 5px solid $gray-light
  background-color: $gray-lighter

  &.plain
    background-color: transparent
    font: italic 1.125rem $font-serif
    border-color: $gray-lighter

  p
    margin: 0 0 10px 0
    font-size: $font-base

    &:last-child
      margin-bottom: 0

  small
    color: $gray-light

    &:before
      content: '\2014 \00A0'

  &.blue
    border-left: 5px solid $blue-light
    background-color: $blue-lighter
    color: $blue

    small
      color: $blue-light

//- Helper classes

.pull-left
  float: left

.pull-right
  float: right

.hide
  display: none

//- Images and media

img, iframe, video
  max-width: 100%
  height: auto

@media screen and (max-width: $breakpoint-desktop-1)

  .wrapper
    width: 90%

@media screen and (min-width: $breakpoint-desktop)

  .wrapper
    width: 75%

@media screen and (min-width: $breakpoint-desktop-wide)

  .wrapper
    width: 65%