/*--------------------------------------------------------------------
*
* $BASE
*
--------------------------------------------------------------------*/

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

body
  font: $font-base/$line-height-base $font-sentinel
  color: $gray-dark
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

p
  margin: 0 0 $space 0

//- Selection highlight

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

//- Links

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:focus
    outline: none

  &:hover 
    color: darken($blue, 20%)

//- Helper classes

.pull-left
  float: left

.pull-right
  float: right

.hide
  display: none

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

//- Images and media

img, iframe, video
  max-width: 100%
  height: auto

@media screen and (max-width: $breakpoint-desktop - 1)

  .wrapper
    width: 90%

@media screen and (min-width: $breakpoint-desktop)

  .wrapper
    width: 75%

@media screen and (min-width: $breakpoint-desktop-wide)

  .wrapper
    width: 65%