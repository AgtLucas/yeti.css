/*--------------------------------------------------------------------
*
* MEDIA
*
--------------------------------------------------------------------*/

.media-wrapper, figure img
  display: inline-block

.media-wrapper, .figure-outlined, figure img
  border-radius: 3px

figure, .video, img
  overflow: hidden
  max-width: 100%

figure

  img
    vertical-align: middle

  figcaption
    color: $gray-light
    font-size: $font-small

//- Container with background

a.media-wrapper
  background-color: $blue
  cursor: pointer 

  &:hover
    img, video
      opacity: .5

//- Outlined container

.media-outlined
  padding: 5px
  border: 1px solid $gray-lighter 