/*--------------------------------------------------------------------
*
* $NAVIGATION
*
--------------------------------------------------------------------*/

.top-nav,
.breadcrumbs,
.pagination,
.tabs,
.side-nav
  font-family: $font-gotham

//- Top Nav

.top-nav
  margin-bottom: 30px 
  z-index: 10
  position: relative

  ul
    margin: 0

  .menu-toggle
    visibility: hidden
    position: absolute
    left: -100%

  a
    display: inline-block
    padding: $ui-padding

  label
    font-weight: normal
    font-size: $font-base
      
  .icon-arrow-down
    left: -5px
      
//- Top Nav Light Variation

.top-nav-light
  border-bottom: $ui-border

  label
    color: $blue

.top-nav-light,
.top-nav-light a
  background-color: white

.top-nav-light .icon-arrow-down
  border-top-color: $blue

//- Top Nav Dark Variation

.top-nav-dark

  label
    color: $blue-saturated-lighter

  a
    color: $blue-saturated-lighter

  a:hover, a.active, label
    color: lighten($blue-saturated-lighter, 40%)

.top-nav-dark,
.top-nav-dark a
  background-color: $blue-saturated

.top-nav-dark .icon-arrow-down
  border-top-color: $blue-saturated-lighter

//- Breadcrumbs

.breadcrumbs
  padding: ceil($ui-padding*.5) $ui-padding

  li:not(:first-child)
    position: relative

    &:after
      content: ''
      position: absolute
      right: 100%
      top: 1px
      height: 100%
      width: 1px
      -webkit-transform: rotate(15deg)
      -ms-transform: rotate(15deg)
      transform: rotate(15deg)
      background-color: $gray-lighter

//- Pagination

.pagination

  a:not([class^='icon'])
    padding: $ui-padding*.2 $ui-padding*.4

  a[class^='icon']
    top: 1px
    position: relative

  .icon-arrow-right
    border-left: 5px solid $blue

  .icon-arrow-left
    border-right: 5px solid $blue

//- Tabs

.tabs
  border-bottom: $ui-border

  .current-item
    position: relative
    top: 2px
    border: $ui-border
    border-bottom-color: transparent
    border-radius: $default-border-radius $default-border-radius 0 0
    background-color: white

//- Side Navigation

.side-nav

  li:not(:last-child)
    a
      border-bottom: $ui-border

  a:hover, 
  .current-item
    background-color: lighten($gray-lighter, 90%)

//- Shared

.unavailable-item
  color: $gray-light

.current-item
  color: $gray-dark
  font-weight: $font-weight-bold

.tabs, 
.side-nav
  a, li
    display: block

.tabs a, 
.side-nav a
  line-height: 2.5

.breadcrumbs, 
.side-nav
  border-radius: $default-border-radius
  border: $ui-border

.breadcrumbs, 
.side-nav, 
.tabs
  a
    padding: 0 $ui-padding

.breadcrumbs a, 
.pagination a
  font-size: $font-small

@media screen and (max-width: $breakpoint-smartphone)

  .breadcrumbs
    padding: 0

    li, a
      display: block

    li
      border-bottom: $ui-border

      &:last-of-type
        border: none

      &:after
        display: none

    a
      padding: 5px 10px

@media screen and (max-width: $breakpoint-tablet)

  .top-nav
    
    > ul, .icon-arrow-down
      display: none

    label, 
    .menu-toggle:checked ~ ul,
    .menu-toggle:checked ~ ul > li

    label
      padding: $ui-padding 0
      text-align: right
      cursor: pointer

    .menu-toggle:checked ~ ul

      .has-dropdown 

        li
          float: left
          border: 0
          width: auto

        li a 
          font-size: $font-small
          font-weight: normal

  .top-nav-light
    
    .menu-toggle:checked ~ ul
      > li
        border-bottom: $ui-border

  .top-nav-dark

    .menu-toggle:checked ~ ul
      > li
        border-bottom: 1px solid $blue-saturated-light

        &:last-child
          border-bottom: 1px solid $blue-saturated-lighter

@media screen and (min-width: $breakpoint-tablet+1)
  
  .top-nav
    
    label
      display: none

    .dropdown a
      display: block

  .top-nav-light
    .dropdown li
      border-bottom: $ui-border

  .top-nav-dark  
    .dropdown li
        border-bottom: 1px solid $blue-saturated-light
