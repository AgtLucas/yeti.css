// Buttons

button
  border: none

.button, button
  display: inline-block
  border-radius: 3px
  padding: 6px 15px
  background-color: lighten($blue-saturated-lighter, 85%)
  font-size: $font-size-base
  font-weight: $font-weight-bold
  text-align: center
  color: $blue-saturated
  user-select()
  cursor: pointer
  -webkit-appearance: none
  transition: all .3s ease-in 
  -webkit-transition: all .3s ease-in

  &:hover:not(:disabled)
    color: $blue-saturated
    background-color: lighten($blue-saturated-lighter, 65%)

  &:disabled
    cursor: not-allowed
    color: lighten($blue-saturated-lighter, 40%)

  &:focus
    outline: none
    
  &.small
    padding: 3px 8px
    font-size: $font-size-small

  &.large
    padding: 10px 20px
    font-size: $font-size-large

  &.primary, &.secondary, &.primary:hover, &.secondary:hover
    color: white

  &.primary
    background-color: $pink

    &:hover:not(:disabled)
      background-color: darken($pink, 10%)

    &:disabled
      background-color: $pink-light

  &.secondary
    background-color: $blue

    &:disabled
      background-color: $blue-light

    &:hover:not(:disabled)
      background-color: darken($blue, 10%)

.button-group

  .button, button
    border-radius: 0
    margin-left: -1px

    &:first-child:only-child
      border-radius: 3px
      margin: 0

    &:first-child
      border-radius: 3px 0 0 3px
      margin: 0

    &:last-child
      border-radius: 0 3px 3px 0

  &.outlined
    display: inline-block
    border-radius: 3px

    button, .button
      border: 1px solid lighten($blue-saturated-lighter, 65%)

    &.primary

      button, .button
        background-color: $pink-lighter
        border: 1px solid $pink-light
        color: $pink

        &:hover
          background-color: lighten($pink-light, 40%)

    &.secondary

      button, .button
        background-color: $blue-lighter
        border: 1px solid $blue-light
        color: $blue

        &:hover
          background-color: lighten($blue-light, 40%)

@media screen and (max-width: 500px)

  .button-group
    
    button, .button
      border-radius: none
      display: block
      margin: 0

      &:first-of-type
        border-radius: 3px 3px 0 0

      &:last-of-type
        border-radius: 0 0 3px 3px

  .button-group.outlined

      .button:not(:last-of-type), button:not(:last-of-type)
        border-bottom: none

