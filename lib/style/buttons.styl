// Buttons

button
  border: none

.button
  line-height: 35px

.button, button
  display: inline-block
  border-radius: 3px
  padding: 0 15px
  height: 35px
  background: lighten($blue-saturated-lighter, 85%)
  font-size: $font-size-base
  font-weight: $font-weight-bold
  text-align: center
  color: $blue-saturated
  text-overflow: ellipsis
  vertical-align: middle
  user-select()

  &:hover:not(:disabled)
    color: $blue-saturated
    background: lighten($blue-saturated-lighter, 65%)
    transition: all .3s ease-in 

  &:disabled
    cursor: not-allowed
    color: lighten($blue-saturated-lighter, 40%)

  &:focus
    outline: none
    
  &.small
    height: 25px
    padding: 0 8px
    font-size: $font-size-small
    line-height: 25px

  &.large
    height: 50px
    line-height: 50px
    padding: 0 30px
    font-size: $font-size-large

  &.primary, &.secondary, &.primary:hover, &.secondary:hover
    color: white

  &.primary
    background: $pink

    &:hover:not(:disabled)
      background: darken($pink, 10%)

    &:disabled
      background: $pink-light

  &.secondary
    background: $blue

    &:disabled
      background: $blue-light

    &:hover:not(:disabled)
      background: darken($blue, 10%)

.button-group

  .button, button
    border-radius: 0
    margin-left: -1px

    &:first-child:only-child
      border-radius: 3px

    &:first-child
      border-radius: 3px 0 0 3px

    &:last-child
      border-radius: 0 3px 3px 0

  &.outlined
    display: inline-block
    border-radius: 3px

    button, .button
      border: 1px solid lighten($blue-saturated-lighter, 65%)

    &.primary

      button, .button
        background: $pink-lighter
        border: 1px solid $pink-light
        color: $pink

        &:hover
          background: lighten($pink-light, 40%)

    &.secondary

      button, .button
        background: $blue-lighter
        border: 1px solid $blue-light
        color: $blue

        &:hover
          background: lighten($blue-light, 40%)

@media screen and (max-width: 500px)

  .button-group
    
    button, .button
      border-radius: none
      display: block
      margin: 0

      &:first-of-type
        border-radius: 3px 3px 0 0

      &:last-of-type
        border-radius: 0 0 3px 3px

  .button-group.outlined

      .button:not(:last-of-type), button:not(:last-of-type)
        border-bottom: none

