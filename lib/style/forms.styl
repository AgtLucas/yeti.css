// Forms

form
  legend
    display: block
    color: black
    width: 100%
    margin-bottom: 1.25em
    font-size: $font-size-large
    border-bottom: 1px solid $gray-lighter

  fieldset
    border: none
    padding: 0
    margin: 0

input[type=text], input[type=email], input[type=password], input[type=search], input[type=date], input[type=url], input[type=file], textarea
  margin-bottom: 10px
  width: 100%
  -webkit-appearance: none
  font-size: $font-size-base

input[type=text], input[type=email], input[type=password], input[type=search], 
input[type=date], input[type=url], input[type=file], textarea, select, input[type=checkbox], input[type=radio]

  &:disabled
    cursor: not-allowed

input[type=text], input[type=email], input[type=password], input[type=search], input[type=date], input[type=url], input[type=file], textarea
  &.input-invalid
    background-color: $red-lighter
    border: 1px solid $red-light
    color: lighten($red, 50%)

    &:focus
      border: 1px solid $red-light
      box-shadow: 0 0 5px $red-light

  &.input-valid
    background-color: $green-lighter
    border: 1px solid $green-light
    color: lighten($green, 40%)

    &:focus
      border: 1px solid $green-light
      box-shadow: 0 0 5px $green-light

input[type=text], input[type=email], input[type=password], input[type=search], input[type=date], input[type=url], input[type=file], textarea, select
  display: block
  border-radius: 3px
  border: 1px solid $gray-lighter

  &:focus
    outline: none
    border: 1px solid $blue-light
    box-shadow: 0 0 5px $blue-light
    transition: all .3s ease-in
    -webkit-transition: all .3s ease-in

  &:disabled
    background-color: lighten($gray-lighter, 60%)

  &:required:focus
    border: 1px solid $orange-light
    box-shadow: 0 0 5px $orange-light

input[type=text], input[type=email], input[type=password], input[type=search], input[type=date], input[type=url]
  height: 45px
  padding: 5px 10px

textarea
  padding: 10px
  resize: none

input[type=file]
  padding: 15px
  background-color: lighten($gray-lighter, 70%)
  font-size: $font-size-small
  color: $gray-light

select
  border: 1px solid $gray-lighter
  height: 30px
  width: 100%
  margin: 20px 0

label
  display: block
  margin-bottom: 5px
  font-weight: $font-weight-bold
  font-size: $font-size-small

.radio, .checkbox
  
  label
    font-size: $font-size-base
    font-weight: normal
    cursor: pointer

    &.disabled
      color: $gray-light
      cursor: not-allowed

    input[type=checkbox], input[type=radio]
      float: left
      margin: 2px 10px 0 0

      &:focus
        outline: none
